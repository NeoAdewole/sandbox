{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "ClearCut",
  "settings": {
    "color": {
      "text": true,
      "background": true,
      "link": true,
      "custom": false,
      "customDuotone": false,
      "customGradient": true,
      "defaultDuotone": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "duotone": [
        {
          "colors": [
            "#000",
            "#FFF"
          ],
          "slug": "black-and-white",
          "name": "Black and White"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--blackish) 0%,var(--wp--preset--color--dark-purple) 100%)",
          "name": "Blackish to DarkPurple",
          "slug": "blackish-dark"
        },
        {
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--dark-purple) 0 min(24rem, 10%), var(--wp--preset--color--blackish) 0% 30%, var(--wp--preset--color--dark-purple) 100%)",
          "name": "Dark to Blackish to Dark",
          "slug": "dark-blackish-dark"
        },
        {
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--primary) 0%,var(--wp--preset--color--tertiary) 100%)",
          "name": "Tertiary to Secondary",
          "slug": "tertiary-secondary"
        },
        {
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--tertiary) 0%,var(--wp--preset--color--primary) 100%)",
          "name": "Tertiary to Primary",
          "slug": "tertiary-primary"
        },
        {
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--base) 0%,var(--wp--preset--color--primary) 350%)",
          "name": "Base to Primary",
          "slug": "base-primary"
        },
        {
          "gradient": "radial-gradient(circle at 5px 5px,#0c0d0d70 2px,#ffffff00 0px,#ffffff00 0px) 0 0 / 8px 8px, linear-gradient(180deg, var(--wp--preset--color--base) 0%,#000000 200%)",
          "name": "Dots",
          "slug": "dots"
        }
      ],
      "palette": [
        {
          "name": "White",
          "slug": "white",
          "color": "#FFFFFF"
        },
        {
          "name": "Black",
          "slug": "black",
          "color": "#000000"
        },
        {
          "name": "Blackish",
          "slug": "blackish",
          "color": "#1B1B1B"
        },
        {
          "name": "Whiteish",
          "slug": "whiteish",
          "color": "#EFEFEF"
        },
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#663399"
        },
        {
          "name": "Complemetary",
          "slug": "complementary",
          "color": "#669933"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "#E4D1D1"
        },
        {
          "name": "Tetiary",
          "slug": "tetiary",
          "color": "#DFDFEF"
        },
        {
          "name": "Dark Purple",
          "slug": "dark-purple",
          "color": "#301934"
        },
        {
          "name": "Contrast",
          "slug": "contrast",
          "color": "#E9EB71"
        },
        {
          "name": "Pop",
          "slug": "pop",
          "color": "#EBB2EA"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--secondary)",
      "background": "var(--wp--preset--color--dark-purple)",
      "gradient": "var(--wp--preset--gradient--dark-blackish-dark) no-repeat"
    },
    "blocks": {
      "core/site-title": {
        "color": {
          "text": "var(--wp--preset--color--pop)"
        },
        "variations": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          },
          "a": {
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/button": {
        "border": {
          "radius": "5px"
        },
        "color": {
          "background": "var(--wp--preset--color--pop)",
          "text": "var(--wp--preset--color--primary)"
        },
        "variations": {
          "outline": {
            "border": {
              "color": "var(--wp--preset--color--pop)"
            },
            "color": {
              "text": "var(--wp--preset--color--pop)"
            }
          }
        }
      },
      "core/navigation": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--pop)"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":visited": {
          "typography": {
            "textDecoration": "underline dashed"
          }
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--color--contrast)"
          },
          "typography": {
            "textDecoration": "underline dashed"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--color--contrast)"
          }
        }
      },
      "button": {
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary)",
            "text": "var(--wp--preset--color--pop)"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--pop)",
            "text": "var(--wp--preset--color--contrast)"
          }
        },
        ":active": {
          "color": {
            "background": "var(--wp--preset--color--secondary)",
            "text": "var(--wp--preset--color--primary)"
          }
        },
        ":visited": {
          "color": {
            "text": "var(--wp--preset--color--dark-purple)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "4rem",
          "lineHeight": "1.6"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "clamp(2.625rem, calc(2.625rem + ((1vw - 0.48rem) * 8.4135)), 3.25rem)",
          "lineHeight": "1.6"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        }
      },
      "heading": {
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.4"
        }
      }
    }
  }
}